<p id="notice"><%= notice %></p>

<p>
  <b>name:</b>
  <%= @actor.name %>
</p>

<p>
  <b>Date of birth:</b>
  <%= @actor.dob ? @actor.dob.strftime("%m-%d-%Y") : '' %>
</p>

<p>
  <b>Gender:</b>
  <%= @actor.gender %>
</p>

<p>
  <b>Movies:</b>
  <%= @actor.dvds ? @actor.dvds.all.collect{|x| x.name}.join(", ") : '' %>
</p>


<%= link_to 'Edit', edit_actor_path(@actor) %> |
<%= link_to 'Destroy', @actor, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', actors_path %>
